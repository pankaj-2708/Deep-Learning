# writting text on image
img=cv2.imread('./training_set/training_set/cats/cat.1.jpg', 1)
# for text we have to pass start location
cv2.putText(img, 'cat', (100,100), fontFace=cv2.FONT_HERSHEY_SIMPLEX, fontScale=2, color=(0,0,255), thickness=2)
cv2.imshow('cat', img)
cv2.waitKey(0)
cv2.destroyAllWindows()


# adv cv2

# a function to show image it will exit only when key x is pressed
img=cv2.imread('./training_set/training_set/cats/cat.1.jpg', 1)

# it will show a image in loop untill 1 sec is passed after presenting the image and x key is pressed
# x key pressing is not working on jupyter so doing it by stop button above
while True:
    cv2.imshow("cat",img)
    if cv2.waitKey(1) & 0xFF=='x':
        break
cv2.destroyAllWindows()


