# video saving
import cv2 

cap=cv2.VideoCapture(0)
fourcc=cv2.VideoWriter_fourcc(*"XVID")

# here 20 is frame rate and 640,480 is resolution
out=cv2.VideoWriter("output.avi",fourcc,20,(640,480))

while True:
    ret , frame = cap.read()
    cv2.imshow("webcam",frame)
    out.write(frame)
    if cv2.waitKey(1) & 0xFF=='x':
        break

out.release()
cv2.destroyAllWindows()


# playing a video

cap=cv2.VideoCapture("output.avi")
import time

while True:
    ret , frame = cap.read()
    cv2.imshow("webcam",frame)
    # because 20 is the frame rate
    time.sleep(1/20)
    if cv2.waitKey(1) & 0xFF=='x':
        break

cv2.destroyAllWindows()



