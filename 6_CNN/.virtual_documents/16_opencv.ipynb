img=cv2.imread('./training_set/training_set/cats/cat.1.jpg', 1)

# a code that will listen to mouse clicking scrolling etc and will do something
def draw(event,x,y,flags,params):
    # for mouse callback event=0 if mouse is moved event=1 if mouse left cliked event=2 if mouse right clicked event =4 if mouse left clicked released and event = 5 if right click released
    if event == 0:
        cv2.circle(img, (100,100), 50, (0,0,255), thickness=2)
    elif event==1:
        cv2.rectangle(img, (100,100), (200,200), (0,0,255), thickness=2)
    elif event ==2:
        cv2.line(img, (100,100), (200,200), (0,0,255), thickness=2)
    elif event ==3:
        cv2.putText(img, 'event3', (100,100), fontFace=cv2.FONT_HERSHEY_SIMPLEX, fontScale=2, color=(0,0,255), thickness=2)
    elif event ==4:
        cv2.putText(img, 'event4', (100,100), fontFace=cv2.FONT_HERSHEY_SIMPLEX, fontScale=2, color=(0,0,255), thickness=2)
    elif event ==5:
        cv2.putText(img, 'event5', (100,100), fontFace=cv2.FONT_HERSHEY_SIMPLEX, fontScale=2, color=(0,0,255), thickness=2)

cv2.namedWindow("cat")
cv2.setMouseCallback("cat",draw)
while True:
    cv2.imshow("cat",img)
    if cv2.waitKey(1) & 0xFF=='x':
        break
cv2.destroyAllWindows()


# Writting a function that will draw a rectangle on dragging 
img=cv2.imread('./training_set/training_set/cats/cat.1.jpg', 1)

draw=False
ix=-1
iy=-1

def draw_rect(event,x,y,flags,params):
    global draw,ix,iy
    if event==1:
        draw=True
        ix=x
        iy=y
    elif event==0:
        if draw:
            cv2.rectangle(img,(ix,iy),(x,y),(0,255,255),thickness=-1)
    elif event==4:
        draw=False
        cv2.rectangle(img,(ix,iy),(x,y),(0,255,255),thickness=-1)

cv2.namedWindow("cat")
cv2.setMouseCallback("cat",draw_rect)

while True:
    cv2.imshow("cat",img)
    if cv2.waitKey(1) & 0xFF=='x':
        break

cv2.destroyAllWindows()


# a cropping tool that will crop on the selected rectangle
crop=False
ix=-1
iy=-1

img=cv2.imread('./training_set/training_set/cats/cat.1.jpg', 1)

def crop_img(event,x,y,flags,params):
    global crop,ix,iy,img
    if event==1:
        crop=True
        ix=x
        iy=y
    elif event==4:
        if crop:
            crop=False 
            img_crop=img[ix::x, iy:y]
            cv2.imshow("cropped_img",img_crop)

cv2.namedWindow("cat")
cv2.setMouseCallback("cat",crop_img)

while True:
    cv2.imshow("cat",img)
    if cv2.waitKey(1) & 0xFF=='x':
        break

cv2.destroyAllWindows()


